{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [ "es5", "es6", "es2015.promise", "dom" ],
    "baseUrl": ".",
    "paths": { "*": [ "src/*" ] },
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "typing/*.d.ts",
    "src/**/*",
    "**/test.ts"
  ]
}
