{
  "compilerOptions": {
    "target": "es5",
    "lib": [ "es5", "es6", "es2015.core", "dom" ],
    "baseUrl": ".",
    "paths": { "*": [ "src/*" ] },
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  },
  "filesGlob": [
    "src/**/*.*",
    "typings/**/*.d.ts"
  ]
}
