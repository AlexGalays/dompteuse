
.fadeScaleIn {
  :global { animation: fadeScaleIn 200ms ease-out both }
}

@keyframes :global(fadeScaleIn) {
  from { opacity: 0 }
  to { opacity: 1 }
}


.fadeScaleOut {
  :global { animation: fadeScaleOut 200ms ease-out both }
}

@keyframes :global(fadeScaleOut) {
  from { opacity: 1; transform: scale(1) }
  to { opacity: 0; transform: scale(0.7) }
}
