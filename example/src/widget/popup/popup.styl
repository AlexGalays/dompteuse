
.overlay {
  position: fixed
  text-align: center
  overflow-y: auto
  top: 0
  left: 0
  right: 0
  bottom: 0
  background: rgba(0, 0, 0, 0.5)
  padding-bottom: 40px
}

.popup {
  display: inline-block
  width: 300px
  margin-top: 40px
  text-align: left
  padding: 20px
  border-radius: 4px
  background: pink
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5)
  transform: translateZ(0) // Layerize
}


.insertAnimation {
  :global { animation: popupInsertAnimation 300ms ease-out both }
}

@keyframes :global(popupInsertAnimation) {
  from { opacity: 0; transform: scale(0.8) }
  to { opacity: 1; transform: scale(1) }
}

.removeAnimation {
  :global { animation: overlayRemoveAnimation 140ms ease-out both }
}

@keyframes :global(overlayRemoveAnimation) {
  from { opacity: 1 }
  to { opacity: 0 }
}