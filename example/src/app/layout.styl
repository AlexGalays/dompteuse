
:global {

  * {
    box-sizing: border-box
  }

  html, body {
    height: 100%
  }

  body {
    color: #222
    overflow-x: hidden
    overflow-y: hidden
    font-family: 'Open Sans', sans-serif
    max-width: 400px
    margin: 0
  }

  component {
    display: block
  }

  header {
    background: #222
    padding: 12px
    color: white
  }

  h1 {
    padding-left: 12px
  }

  label {
    display: block
    margin-top: 20px
  }

  input {
    display: block
    width: 100%
    padding: 6px
    padding: 8px
    border-radius: 3px
    border: none
    color: #444
  }

  button {
    display: block
    margin-top: 10px
    cursor: pointer
    padding: 10px 15px
    font-size: 10px
    -webkit-appearance: none
    appearance: none
    box-shadow: none
    border-radius: 4px
    border-style: none
    background: white
  }

  #screens {
    overflow-y: scroll
    height: 100%
    margin: 8px
    transform: translate3d(0, 0, 0)
  }

}
